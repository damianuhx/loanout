        $(document).ready(function(){
            var menu = $('#mnav')
            $('#mmenu').click(function(event){
                event.preventDefault();
                if (menu.is(":visible"))
                {
                    menu.slideUp(100);
                    $(this).removeClass("open");
                }
                else
                {
                    menu.slideDown(100);
                    $(this).addClass("open");
                }
            });
        $("#datepicker").datepicker({dateFormat: 'yyyy-mm-dd'});
            $(".fancybox").fancybox({
                maxWidth	: 800,
                maxHeight	: 600,
                fitToView	: false,
                width		: '100%',
                height		: '100%',
                autoSize	: false,
                closeClick	: false,
                openEffect	: 'none',
                closeEffect	: 'none'
            });
        $("table").stupidtable();
        });
    </script>

